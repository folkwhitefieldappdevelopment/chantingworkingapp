<!-- res/layout/activity_splash.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/welcome_page_bg"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="@integer/linearlayoutOrientation"
        android:paddingTop="@dimen/login_activity_layout_padding_top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iskconBangaloreLogo"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/iskcon_bangalore_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/iskcon_bangalore_logo"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="10dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/spWelcomeImage"
                android:layout_width="453dp"
                android:layout_height="361dp"
                android:layout_marginTop="@dimen/login_activity_sp_image_margin_top"
                android:contentDescription="@string/shila_prabhupada_welcome_image"
                app:srcCompat="@drawable/srila_prabhupada_welcome_image_lbg"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="10dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:background="#F1E8EB"
                android:text="@string/welcome_message"
                android:textAlignment="center"
                android:textColor="#000186"
                android:textSize="20sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/loginButtonLL"
                android:layout_width="wrap_content"
                android:layout_height="63sp"
                android:layout_marginTop="40sp"
                android:background="@drawable/welcome_button_drawable"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/googleIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="0sp"
                    android:layout_marginEnd="15sp"
                    android:contentDescription="@string/google_icon"
                    app:srcCompat="@drawable/google_icon_lg"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="10dp" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20sp"
                    android:background="@drawable/welcome_button_drawable"
                    android:gravity="center"
                    android:text="@string/sign_up_using_google"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
