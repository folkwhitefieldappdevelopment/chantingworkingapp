<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#88FFFFFF"> <!-- Ripple color :: WHITE -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#ccc0b9bc"
                android:startColor="#ffF1E8EB"
                android:type="linear" />
            <corners
                android:bottomRightRadius="@dimen/_12sdp"
                android:topLeftRadius="@dimen/_12sdp" />
            <stroke
                android:width="1dp"
                android:color="#ccc0b9bc" />
        </shape>
    </item>
    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</ripple>