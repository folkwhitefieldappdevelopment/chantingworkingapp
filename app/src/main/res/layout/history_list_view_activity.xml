<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historyListViewLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/ch_background_light_3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/baseline_close_24"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:background="@drawable/myroundedbg"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                android:text="current date"
                android:textAlignment="center"
                android:textColor="@color/history_list_view_header"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@color/ch_counter_border_dark"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                android:text="user name"
                android:textAlignment="center"
                android:textColor="@color/history_list_view_header"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="@integer/linearlayoutOrientation">

                <TextView
                    android:id="@+id/chantedRoundsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_5sdp"
                    android:shadowColor="@color/ch_light_color"
                    android:shadowRadius="1"
                    android:text="000"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/ch_light_color"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="(Chanted Rounds)"
                    android:textAlignment="center"
                    android:textColor="@color/history_list_view_header"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="44dp"
                android:background="@color/ch_counter_border_dark"
                android:gravity="center"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="@integer/linearlayoutOrientation"
                android:layout_marginStart="@dimen/_15sdp">

                <TextView
                    android:id="@+id/totalHeardCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_5sdp"
                    android:shadowColor="@color/ch_light_color"
                    android:shadowRadius="1"
                    android:text="0000"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/ch_light_color"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="(Total Heard Count)"
                    android:textAlignment="center"
                    android:textColor="@color/history_list_view_header"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>