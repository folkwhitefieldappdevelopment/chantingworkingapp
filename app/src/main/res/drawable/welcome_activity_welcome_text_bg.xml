<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#88FFFFFF"> <!-- Ripple color :: WHITE -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:angle="0"
                android:endColor="#ccc0b9bc"
                android:startColor="#ffF1E8EB"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#4dc0b9bc" />
            <corners
                android:bottomLeftRadius="@dimen/_25sdp"
                android:topRightRadius="@dimen/_25sdp" />/>
        </shape>
    </item>
    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</ripple>